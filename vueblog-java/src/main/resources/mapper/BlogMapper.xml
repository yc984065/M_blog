<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrblue.mapper.BlogMapper">
    <resultMap id="blogResultMap" type="com.mrblue.entity.Blog">
        <id property="id" column="id"/>
        <!-- 其他字段映射 -->
        <collection property="categories" ofType="com.mrblue.entity.Category"
                    select="findCategoriesByBlogId" column="id"/>
    </resultMap>

    <select id="findByCategoryId" resultMap="blogResultMap">
        SELECT DISTINCT b.*
        FROM m_blog b
                 JOIN blog_category bc ON b.id = bc.blog_id
        WHERE bc.category_id = #{categoryId}
        ORDER BY b.created DESC
    </select>

    <select id="findTagsByBlogId" resultType="com.mrblue.entity.Tag">
        SELECT t.*
        FROM tag t
                 JOIN blog_tag bt ON t.id = bt.tag_id
        WHERE bt.blog_id = #{blogId}
    </select>

</mapper>
